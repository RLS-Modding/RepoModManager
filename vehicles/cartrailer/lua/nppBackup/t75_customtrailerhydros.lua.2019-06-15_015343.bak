local M = {}

local function init()
	electrics.values["topramp"] = 0
	electrics.values["topramp_input"] = 0
end

local function updateGFX(dt)
electrics.values['topramp'] = math.min(1, math.max(-0.0, (electrics.values['topramp'] + electrics.values['topramp_input'] * dt )))


end

M.updateGFX = updateGFX
M.init = init
return M


